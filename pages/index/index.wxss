.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.header {
  width: 100%;
  text-align: center;
  padding: 40rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.entry-points {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  padding: 40rpx 20rpx;
}

.entry-item {
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.entry-item image {
  width: 80rpx;
  height: 80rpx;
}

.entry-item text {
  font-size: 32rpx;
  color: #333;
} 