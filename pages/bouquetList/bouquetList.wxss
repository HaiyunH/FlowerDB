.container {
  padding: 20rpx;
  background: #f8f8f8;
  padding-top: 0;
}

.bouquet-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 10rpx;
}

.bouquet-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.bouquet-image {
  width: 100%;
  height: 300rpx;
}

.bouquet-info {
  padding: 20rpx;
}

.bouquet-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.bouquet-price {
  font-size: 32rpx;
  color: #e4393c;
  margin: 10rpx 0;
  display: block;
}

.materials {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.material-tag {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.loading, .error, .bottom-loading {
  text-align: center;
  padding: 40rpx;
  color: #666;
}

.error button {
  margin-top: 20rpx;
}

.filter-bar {
  padding: 20rpx;
  background: #fff;
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-container {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.filter-row {
  padding: 16rpx 20rpx;
  white-space: nowrap;
}

.filter-row:first-child {
  border-bottom: 1rpx solid #f5f5f5;
}

.filter-pills {
  display: inline-flex;
  gap: 20rpx;
  padding: 0 10rpx;
}

.filter-pill {
  display: inline-block;
  padding: 12rpx 30rpx;
  border-radius: 100rpx;
  font-size: 26rpx;
  border: 2rpx solid #4CAF50;
  color: #4CAF50;
  background: #fff;
  transition: all 0.3s ease;
}

.filter-pill.active {
  background: #4CAF50;
  color: #fff;
} 