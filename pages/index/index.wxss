/* Main container for the entire page */
.container {
  padding: 20rpx;          /* Adds 20rpx space inside the container on all sides */
  min-height: 100vh;       /* Ensures container is at least full viewport height */
  background-color: #f8f8f8; /* Light gray background color */
}

/* Header section styling */
.header {
  width: 100%;            /* Header spans full width */
  text-align: center;     /* Centers text content horizontally */
  padding: 50rpx 0;       /* 40rpx padding top and bottom, 0 left and right */
}

/* Main title styling */
.title {
  font-size: 48rpx;       /* Large text size for title */
  font-weight: bold;      /* Makes text bold */
  color: #333;            /* Dark gray color for text */
}

/* Container for navigation buttons/entry points */
.entry-points {
  display: flex;          /* Uses flexbox layout */
  flex-direction: column; /* Stacks children vertically */
  gap: 30rpx;            /* 30rpx space between each entry item */
  padding: 40rpx 20rpx;   /* 40rpx top/bottom, 20rpx left/right padding */
}


/* Entry item container */
.entry-item {
  position: relative;       /* Allows layering for background and text */
  padding: 40rpx 0;         /* Equal padding on top and bottom */
  width: 100%;              /* Full width for flexibility */
  height: 200rpx;           /* Fixed height for consistent card size */
  margin-bottom: 30rpx;     /* Spacing between items */
  border-radius: 16rpx;     /* Rounded corners for a modern look */
  overflow: hidden;         /* Ensures the background doesn't spill out of rounded corners */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
  text-align: center;
}

/* Background image styling */
.entry-background {
  position: absolute;       /* Ensures the background covers the entire entry-item */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;   /* Ensures the image covers the entire block */
  background-position: center; /* Centers the image */
  filter: brightness(0.85); /* Optional: Slightly darkens the image for better text visibility */
}

/* Text styling */
.entry-text {
  position: relative;       /* Ensures text is layered above the background */
  z-index: 1;               /* Ensures text appears above the background */
  font-size: 42rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.90); /* White text with 85% opacity */
  text-align: center;
  line-height: 200rpx;      /* Vertically aligns text inside the item */
}